<% content_for :body_content_title do %>
  <%= @page_module.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @page_module.title %>
    </p>
  </section>
  <section>
    <h1>Type Module</h1>
    <p>
      <%=raw @page_module.type_module %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @page_module.body %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="page_modules">
      <% @page_modules.each do |page_module| %>
        <li>
          <%= link_to page_module.title, refinery.page_modules_page_module_path(page_module) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

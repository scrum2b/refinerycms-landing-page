<% content_for :body do %>
  <ul id="page_modules">
    <% @page_modules.each do |page_module| %>
	    <li>
	    	<% if page_module.type_module == "big slider" %>
	    		<div class="slider">
						<ul class="big_slider"> 
							<% page_module.page_module_images.each do |page_module_image| %>
								<li class="ui-tabs-panel">
									<%= image_fu(page_module_image.photo, "900x300")%>
								</li> 
							<% end %>
						</ul>
					</div> 
		    <% elsif page_module.type_module == "small slider" %>
		    	<div class="slider">
		    		<div class="slider1">
		    			<h1><%= page_module.title %></h1>
		    			<ul class="small_slider"> 
								<% page_module.page_module_images.each do |page_module_image| %>
									<li class="ui-tabs-panel">
										<%= image_fu(page_module_image.photo, "900x300")%>
									</li> 
								<% end %>
							</ul>
		    		</div>
					</div> 
		    <% else %>
		    	<!-- < %= link_to page_module.title, refinery.page_modules_page_module_path(page_module) %> -->
		      <%= raw page_module.body %>
		    <% end %>
		  </li>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>

<%= form_for [refinery, :landing_pages_admin, @landing_page] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @landing_page,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :type_module -%>
    <%= f.text_field :type_module -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:body],
                :object => "landing_pages/landing_page" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.landing_pages.admin.landing_pages.landing_page'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @landing_page.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>

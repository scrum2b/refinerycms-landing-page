<% content_for :body_content_title do %>
  <%= @landing_page.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @landing_page.title %>
    </p>
  </section>
  <section>
    <h1>Type Module</h1>
    <p>
      <%=raw @landing_page.type_module %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @landing_page.body %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="landing_pages">
      <% @landing_pages.each do |landing_page| %>
        <li>
          <%= link_to landing_page.title, refinery.landing_pages_landing_page_path(landing_page) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
